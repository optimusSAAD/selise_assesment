
@{
    ViewBag.Title = "Login";
}

<br />
<br />
<div class="container">
    <div class="row">
        <form action="">
           
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-4" for="email">Email:</label>
                    <input type="email" class="form-control col-md-8" id="email" placeholder="Enter email" name="email" ng-model="UserModel.Email">
                </div>
            </div>
            <br />
            <br />
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-4" for="pwd">Password:</label>
                    <input type="password" class="form-control col-md-8" id="pwd" placeholder="Enter password" name="pswd" ng-model="UserModel.Password">
                </div>
            </div>
            <br />
            <br />
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary" ng-click="Login()">Submit</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Register
                </button>
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User Registration</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form action="">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="fName">First Name:</label>
                                <input type="text" class="form-control col-md-8" id="fName" placeholder="First Name" name="fName" ng-model="UserModel.FName" >
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="lName">Last Name:</label>
                                <input type="text" class="form-control col-md-8" id="lName" placeholder="Last Name" name="lName" ng-model="UserModel.LName">
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="phone">Phone:</label>
                                <input type="text" class="form-control col-md-8" id="phone" placeholder="01300000000" name="phone" ng-model="UserModel.Phone">
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="email">Email:</label>
                                <input type="email" class="form-control col-md-8" id="email" placeholder="Enter email" name="email" ng-model="UserModel.Email">
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="pwd">Country:</label>
                                <div class="select-style">
                                    <select class="form-control" ng-model="UserModel.Country" ng-change="getCity(UserModel.Country)"
                                            ng-options="item.Id as item.Name for item in CountryList" id="Country"
                                            name="Country" required tabindex="1">
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="pwd">City:</label>
                                <div class="select-style">
                                    <select class="form-control"  ng-model="UserModel.CityId"
                                            ng-options="item.Id as item.Name for item in City" id="City"
                                            name="City" required tabindex="1">
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="pwd">Image:</label>
                                <div class="col-md-3">
                                    <input type="file" id="uploadImage" ng-model="UserModel.Image" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])">
                                </div>
                                <div class="col-md-5">
                                    <img id="blah" alt="your image" width="100" height="100" />
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="pwd">CV:</label>
                                <div class="col-md-8">
                                    <input type="file" id="myFile" name="filename"  ng-model="UserModel.CV">
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="pwd">Password:</label>
                                <input type="password" class="form-control col-md-8" id="pwd" placeholder="Enter password" name="pswd"  ng-model="UserModel.Password">
                            </div>
                        </div>

                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="dob">DOB:</label>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <input type="datetime-local" id="birthdaytime" name="birthdaytime"  ng-model="UserModel.DOB">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-4" for="dob">Gender:</label>
                                <div class="col-md-8">
                                    <select class="form-control"  ng-model="UserModel.Gender"  id="dob"
                                            name="dob" required tabindex="1">
                                        <option value="">--Select--</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" ng-click="SaveUser()">Save</button>
            </div>
        </div>
    </div>
</div>
